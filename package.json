{
  "name": "js-schema-tools",
  "version": "1.0.6",
  "description": "A collection of schema-enabled JS tools",
  "main": "index.js",
  "type": "module",
  "bin": {
    "jss-makemigration": "./lib/schema/migrations/cli.js"
  },
  "scripts": {
    "clean": "prettier ./{lib,test}/**/*.js --write",
    "test": "run-s clean test:jest:*",
    "test:jest": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose=false",
    "test:jest:models": "run-s test:jest:models:*",
    "test:jest:models:stored": "npm run test:jest -- test/models/model.stored.test.js",
    "test:jest:models:unstored": "npm run test:jest -- test/models/model.unstored.test.js",
    "test:jest:migration": "npm run test:jest -- test/migration/migration.test.js",
    "test:jest:forms": "npm run test:jest -- test/forms/forms.test.js",
    "test:jest:schema": "run-s test:jest:schema:*",
    "test:jest:schema:conforms": "npm run test:jest -- test/schema/conforms.test.js"
  },
  "keywords": [
    "js",
    "model",
    "schema",
    "diff",
    "equals"
  ],
  "author": "Pomax",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^27.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1"
  },
  "dependencies": {
    "jsdom": "^17.0.0"
  }
}
