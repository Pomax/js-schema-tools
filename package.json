{
  "name": "js-schema-tools",
  "version": "1.0.6",
  "description": "A collection of schema-enabled JS tools",
  "main": "index.js",
  "type": "module",
  "bin": {
    "jss-makemigration": "./lib/schema/migrations/cli.js"
  },
  "scripts": {
    "test": "node test/test.js && npm run clean",
    "clean": "rm -rf ./json-data-store",
    "test:jest": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose=false",
    "test:jest:model": "npm run test:jest -- test/model.test.js",
    "test:jest:migration": "npm run test:jest -- test/migration.test.js",
    "test:cli": "npm uninstall -g && npm install -g && jss-makemigrations",
    "test:model": "node ./test/model.test.js",
    "test:migrate": "npm run test:model && node ./test/migration.test.js"
  },
  "keywords": [
    "js",
    "datastore",
    "json",
    "flat",
    "file",
    "db",
    "schema"
  ],
  "author": "Pomax",
  "license": "MIT",
  "dependencies": {
    "cross-env": "^7.0.3",
    "jest": "^27.2.2"
  }
}
